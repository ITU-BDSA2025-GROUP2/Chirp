@page "/"
@model Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

@using Core
@using Infrastructure.Repositories
@using Microsoft.AspNetCore.Identity
@using Infrastructure
@using System.Diagnostics.Eventing.Reader
@using Microsoft.CodeAnalysis.CSharp.Syntax

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div>
    <h2> Public Timeline </h2>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox">
            <h3>What's on your mind @(User.Identity.Name)?</h3>
            <form method="post">
                @Html.AntiForgeryToken()
                <input style="float: left" type="text" input id="Cheep_Text" name="Text" asp-for="Text" maxlength="160">
                <input type="submit" value="Share">
            </form>
        </div>
    }






    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>

                        <small>Likes 0</small>
                        @if(SignInManager.IsSignedIn(User)){
                            
                            @if(User.Identity.Name != cheep.Email){
                                <form method="post">
                                @Html.AntiForgeryToken()
                                    <input type="hidden" name="Email" value="@cheep.Email"/>
                                    @if (@cheep.IsFollowed){
                                        <button type="submit" formaction="/?handler=Follow">Unfollow</button>
                                    }
                                    else{
                                        <button type="submit" formaction="/?handler=Follow">Follow</button>
                                    }
                                </form>
                            }
                            <form method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" formaction="/?handler=Like">Like</button>
                            </form>

                        }
                        

                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>