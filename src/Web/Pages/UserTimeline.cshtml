@page "/{author}"
@model Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    //var routeName = HttpContext.GetRouteValue("author");
    var routeName = Model.Author;
}

@using Microsoft.AspNetCore.Identity
@using Infrastructure

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div>
    <h2> @routeName's Timeline </h2>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox">
            <h3>What's on your mind @(User.Identity.Name)?</h3>
            <form method="post">
                @Html.AntiForgeryToken()
                <input style="float: left" type="text" input id="Cheep_Text" name="Text" asp-for="Text" maxlength="160">
                <input type="submit" value="Share">
            </form>
        </div>
    }


    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>

                        @if(SignInManager.IsSignedIn(User) && User.Identity.Name != cheep.Email){
                            
                            <form method="post">
                            @Html.AntiForgeryToken()
                                <input type="hidden" name="Email" value="@cheep.Email"/>
                                @if(@cheep.IsFollowed){
                                    <button type="submit" formaction="/@routeName/?handler=Follow">Unfollow</button>
                                }else{
                                    <button type="submit" formaction="/@routeName/?handler=Follow">Follow</button>
                                }
                                 
                            </form>
                        }
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>